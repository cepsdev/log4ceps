state{
 id{ZM_UserInteractionSolved_EntryNumber;};
 value{-1;};
};



state{
 id{Monitor_status;};
 value{0;};//An == 1, Aus == 0
 value{0.5;}; //Dimmung : 0..1
 value{"ok";}; //Statuscode
};


state{
 id{System_Time_date;};
 value{"01.01.1970 00:00:00";};
};

state{
 id{GPS_Time_date;};
 value{"01.01.1970 00:00:00";};
};


/* CAN Teilnehmer */

